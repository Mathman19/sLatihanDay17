
@{
    ViewBag.Title = "Calculator";
}

<h2>@ViewBag.Title</h2>

<table class="table table-bordered" id="order-table">
    <thead>
        <tr>
            <th>Angka Pertama</th>
            <th>Operasi</th>
            <th>Angka Kedua</th>
            <th>Hasil</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>
                <input type="number" id="first-number" value="" name="first-number" class="form-control" />
            </th>
            <th id="sign">?</th>
            <th>
                <input type="number" id="second-number" value="" name="second-number" class="form-control" />
            </th>
            <th>
                <input type="number" id="Total" value="0" name="Total" class="form-control" />
            </th>
        </tr>
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3">
                <button type="button" class="btn btn-success btn-add" title="Select" style="width:7%">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                 </button>
                <button type="button" class="btn btn-warning btn-sub" title="Select" style="width:7%">
                    <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
                </button>
                <button type="button" class="btn btn-primary btn-multi" title="Select" style="width:7%">
                    <span class="glyphicon glyphicon-asterisk" aria-hidden="true"></span>
                </button>
                <button type="button" class="btn btn-danger btn-dev" title="Select" style="width:7%">
                    <span class="glyphicon glyphicon-italic" aria-hidden="true"></span>
                </button>
            </th>
        </tr>
    </tfoot>
</table> 

@section Scripts{
<script type="text/javascript">
        $('.btn-add').click(function () {
        var a = parseInt($('#first-number').val());
        var b = parseInt($('#second-number').val());
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Addition", "Calculator")',
                dataType: 'json',
                data: {
                    a: a,
                    b: b
                },
                success: function (result) {
                    $('#Total').val(result.hasil);
                }
            });
            $('#sign').html("+");
        });
    $('.btn-sub').click(function () {
        var a = parseInt($('#first-number').val());
        var b = parseInt($('#second-number').val());
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("Subs", "Calculator")',
                    dataType: 'json',
                    data: {
                        a: a,
                        b: b
                    },
                    success: function (result) {
                        $('#Total').val(result.hasil);
                    }
                });
        $('#sign').html("-");
        });
    $('.btn-multi').click(function () {
        var a = parseInt($('#first-number').val());
        var b = parseInt($('#second-number').val());
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Multi", "Calculator")',
                dataType: 'json',
                data: {
                    a: a,
                    b: b
                },
                success: function (result) {
                    $('#Total').val(result.hasil);
                }
            });
        $('#sign').html("X");
        });
    $('.btn-dev').click(function () {
        var a = parseFloat($('#first-number').val());
        var b = parseFloat($('#second-number').val());
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Devide", "Calculator")',
                dataType: 'json',
                data: {
                    a: a,
                    b: b
                },
                success: function (result) {
                    $('#Total').val(result.hasil);
                }
            });
        $('#sign').html("/");
        });
</script>
}